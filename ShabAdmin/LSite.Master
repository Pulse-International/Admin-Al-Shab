            margin-bottom: 25px;
            font-size: 15px;
        }

        /* Social Media */
        .social-links {
            display: flex;
            gap: 12px;
        }

        .social-link {
            width: 45px;
            height: 45px;
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #ffc107;
            font-size: 18px;
            text-decoration: none;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

            .social-link:hover {
                background: linear-gradient(135deg, #ffc107 0%, #ffdb4d 100%);
                color: #dc3545;
                transform: translateY(-3px);
                border-color: #ffc107;
            }

        /* Footer Links */
        .footer-section h3 {
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 20px;
            color: #ffc107;
        }

        .footer-links {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .footer-links li {
                margin-bottom: 12px;
            }

            .footer-links a {
                color: #b0bec5;
                text-decoration: none;
                font-size: 15px;
                transition: all 0.3s ease;
                display: inline-flex;
                align-items: center;
                gap: 8px;
            }

                .footer-links a:hover {
                    color: #ffc107;
                    padding-right: 5px;
                }

                .footer-links a i {
                    font-size: 12px;
                }

        /* Footer Bottom */
        .footer-bottom {
            border-top: 1px solid rgba(255, 193, 7, 0.2);
            padding-top: 30px;
            margin-top: 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .copyright {
            color: #b0bec5;
            font-size: 14px;
        }

        .footer-bottom-links {
            display: flex;
            gap: 25px;
        }

            .footer-bottom-links a {
                color: #b0bec5;
                text-decoration: none;
                font-size: 14px;
                transition: color 0.3s ease;
            }

                .footer-bottom-links a:hover {
                    color: #ffc107;
                }

        /* ==================== RESPONSIVE ==================== */
        @media (max-width: 992px) {
            .header-container {
                flex-wrap: wrap;
                gap: 15px;
            }

            .nav-links {
                display: none;
                width: 100%;
                flex-direction: column;
                gap: 10px;
                padding: 20px 0;
                border-top: 2px solid rgba(255, 193, 7, 0.2);
            }

                .nav-links.active {
                    display: flex;
                }

            .mobile-toggle {
                display: block;
            }

            .auth-buttons {
                width: 100%;
                justify-content: center;
            }

            .footer-content {
                grid-template-columns: 1fr;
                gap: 40px;
            }

            .footer-bottom {
                flex-direction: column;
                text-align: center;
            }
        }

        @media (max-width: 576px) {
            .header-container {
                padding: 0px;
            }

            .logo-text {
                font-size: 22px;
            }
            .main-header{
                padding:1px;
            }
            .logo {
                width: 100%;
                height: 100%;
                font-size: 24px;
            }
            .logoimage{
                width:100%;
            }
            .btn-register {
                padding: 10px 20px;
                font-size: 14px;
            }

            .auth-buttons {
                flex-direction: column;
                width: 100%;
            }

            .btn-register {
                width: 100%;
                justify-content: center;
            }
            .logo-section{
                    margin: 5px auto;
            }
            .hero-image-wrapper img{
                width:100%;
            }
        }
    </style>
</head>

