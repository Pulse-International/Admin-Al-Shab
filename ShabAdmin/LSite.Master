    <style>
        * {
            font-family: 'Cairo', sans-serif;
        }

        body {
            margin: 0;
            padding: 0;
            background: #f8f9fa;
            direction: rtl;
            text-align: right;
        }

        /* ==================== HEADER ==================== */
        .main-header {
            box-shadow: 0 2px 15px rgba(220, 53, 69, 0.25);
            position: sticky;
            top: 0;
            z-index: 1000;
            padding: 0;
            border-bottom: 3px solid #ffc107;
            padding: 9px;
            background: #d61821;
        }

        .header-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 46px 30px;
/*            display: flex;*/
            align-items: center;
            justify-content: space-between;
            position: relative;
        }

            /* Golden Border Effect */
            .header-container::before {
                content: '';
                position: absolute;
                top: -3px;
                left: 0;
                right: 0;
                height: 3px;
            }

        /* Logo */
        .logo-section {
/*            display: flex;*/
            align-items: center;
            gap: 15px;
            position: relative;
        }

        .logo {
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            font-weight: 900;
            color: #dc3545;
            position: relative;
        }

            .logo::before {
                position: absolute;
                width: 70px;
                height: 70px;
                border: 2px solid rgba(255, 193, 7, 0.2);
                border-radius: 50%;
                animation: pulse 2s infinite;
            }

        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
                opacity: 1;
            }

            50% {
                transform: scale(1.1);
                opacity: 0.5;
            }
        }

        .logo-text {
            color: black;
            font-size: 28px;
            font-weight: 900;
            letter-spacing: 1px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
            padding-right: 12px;
        }

        /* Navigation */
        .nav-links {
            display: flex;
            gap: 30px;
            align-items: center;
            margin: 0;
            padding: 0;
            list-style: none;
        }

            .nav-links a {
                color: black;
                text-decoration: none;
                font-size: 17px;
                font-weight: 600;
                padding: 10px 20px;
                border-radius: 25px;
                transition: all 0.3s ease;
                position: relative;
                text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
            }

                .nav-links a:hover {
                    background: rgba(255, 193, 7, 0.15);
                    transform: translateY(-2px);
                    box-shadow: 0 3px 10px rgba(255, 193, 7, 0.2);
                }

                .nav-links a.active {
                    background: linear-gradient(135deg, #ffc107 0%, #ffdb4d 100%);
                    color: #dc3545;
                    font-weight: 700;
                    box-shadow: 0 3px 12px rgba(255, 193, 7, 0.4);
                }

        .btn-merchant {
            background: linear-gradient(135deg, #ffc107 0%, #ffdb4d 100%);
            color: #dc3545;
            border-color: #ffc107;
            font-weight: 700;
        }

            .btn-merchant:hover {
                background: white;
                color: #dc3545;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(255, 255, 255, 0.3);
            }

        .btn-driver {
            background: white;
            color: #dc3545;
            border: 2px solid #ffc107;
            font-weight: 700;
        }

            .btn-driver:hover {
                background: linear-gradient(135deg, #ffc107 0%, #ffdb4d 100%);
                color: #dc3545;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
            }

        /* Mobile Menu Toggle */
        .mobile-toggle {
            display: none;
            background: linear-gradient(135deg, #ffc107 0%, #ffdb4d 100%);
            border: 2px solid white;
            padding: 10px 15px;
            border-radius: 10px;
            cursor: pointer;
            color: #dc3545;
            font-size: 20px;
            font-weight: 700;
        }

        /* ==================== MAIN CONTENT ==================== */
        .main-content {
            min-height: calc(100vh - 200px);
            padding: 40px 20px;
        }

        /* ==================== FOOTER ==================== */
        .main-footer {
            background: linear-gradient(135deg, #2c3e50 0%, #1a252f 100%);
            color: white;
            padding: 60px 0 20px;
            margin-top: 80px;
            border-top: 3px solid #ffc107;
        }

